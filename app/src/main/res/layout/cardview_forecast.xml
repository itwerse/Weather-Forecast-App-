<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    xmlns:chart="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/_6sdp"
    >

    <LinearLayout
        android:id="@+id/recycler_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/date_tv"
            android:visibility="gone"

            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:textAllCaps="false"
            android:text="time"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/recycler_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/rain_description__TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_16sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
android:visibility="gone"
            android:text="time"
            android:textSize="@dimen/_10sdp"
       />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/item_round"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weather_icon_text"
                android:src="@drawable/ic_few_clouds"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
               />
            <TextView
                android:id="@+id/time_TextView"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="time"
                android:textSize="@dimen/_10sdp"

                />

            <TextView
                android:id="@+id/temperture_TextView"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="temp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
android:visibility="gone"
                android:textColor="#fff"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />



</LinearLayout>


        </LinearLayout>



        <!--        <com.db.chart.view.BarChartView-->
