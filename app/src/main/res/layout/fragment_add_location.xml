<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView223"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/button_insert"
        android:layout_marginTop="16dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_insert" />

    <TextView
        android:id="@+id/et_addCity"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/_16sdp"
android:textColor="#FFFFFF"
android:textSize="20dp"
android:visibility="gone"
android:gravity="center"
        android:hint="Add Location"
          android:paddingStart="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="@+id/button_insert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/button_insert"

        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_add_btn"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"

        app:layout_constraintBottom_toTopOf="@+id/recyclerView223"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_addCity"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"

            android:src="@drawable/icon_add_loc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Add Location"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


